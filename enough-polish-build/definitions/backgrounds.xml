<backgrounds>
	<!-- SimpleBackground -->
	<background>
		<class>de.enough.polish.ui.backgrounds.SimpleBackground</class>
		<type-names>
			<type-name>simple</type-name>
			<type-name>SimpleBackground</type-name>
		</type-names>
		<constructors>
			<constructor>
				<params>
					<param>
						<name>color</name>
						<description>the color of this background in RGB, e.g. 0xFFDD12</description>
						<mandatory>no</mandatory>
						<type>rgbColor</type>
						<default>0xFFFFFF</default>
					</param>
				</params>
			</constructor>
		</constructors>
	</background>
	
	<!-- BorderedSimpleBackground -->
	<background>
		<class>de.enough.polish.ui.backgrounds.SimpleBackground</class>
		<type-names>
			<type-name>borderedSimple</type-name>
			<type-name>BorderedSimpleBackground</type-name>
		</type-names>
		<constructors>
			<constructor>
				<params order="color,borderColor,borderWidth">
					<param>
						<name>color</name>
						<description>the color of this background in RGB, e.g. 0xFFDD12</description>
						<mandatory>no</mandatory>
						<type>rgbColor</type>
						<default>0xFFFFFF</default>
					</param>
					<param>
						<name>borderColor</name>
						<description>the color of the border of this background in RGB, e.g. 0xFFDD12</description>
						<mandatory>no</mandatory>
						<type>rgbColor</type>
						<default>0</default>
					</param>
					<param>
						<name>borderWidth</name>
						<alternatives>width</alternatives>
						<description>the width of the border of this background</description>
						<mandatory>no</mandatory>
						<type>positiveInt</type>
						<default>1</default>
					</param>
				</params>
			</constructor>
		</constructors>
	</background>
	
	<!-- RoundRectBackground -->
	<background>
		<class>de.enough.polish.ui.backgrounds.RoundRectBackground</class>
		<type-names>
			<type-name>round</type-name>
			<!-- one could assume that the class-name is always a valid type-name... -->
			<type-name>RoundRectBackground</type-name>
		</type-names>
		<constructors>
			<constructor>
				<params order="color,arc">
					<param>
						<name>color</name>
						<description>the color of this background in RGB, e.g. 0xFFDD12</description>
						<mandatory>no</mandatory>
						<type>rgbColor</type>
						<default>0xFFFFFF</default>
					</param>
					<param>
						<name>arc</name>
						<description>the diameter of the arc at the four corners</description>
						<mandatory>no</mandatory>
						<type>positiveInt</type>
						<default>5</default>
					</param>
				</params>
			</constructor>
			<constructor>
				<params order="color,arcWidth,arcHeight">
					<param>
						<name>color</name>
						<description>the color of this background in RGB, e.g. 0xFFDD12</description>
						<mandatory>no</mandatory>
						<type>rgbColor</type>
						<default>0xFFFFFF</default>
					</param>
					<param>
						<name>arcWidth</name>
						<description>the horizontal diameter of the arc at the four corners</description>
						<mandatory>no</mandatory>
						<type>positiveInt</type>
						<default>5</default>
					</param>
					<param>
						<name>arcHeight</name>
						<description>the vertical diameter of the arc at the four corners</description>
						<mandatory>no</mandatory>
						<type>positiveInt</type>
						<default>5</default>
					</param>
				</params>
			</constructor>
		</constructors>
	</background>

	<!-- BorderedRoundRectBackground -->
	<background>
		<class>de.enough.polish.ui.backgrounds.BorderedRoundRectBackground</class>
		<type-names>
			<type-name>borderedRound</type-name>
			<!-- one could assume that the class-name is always a valid type-name... -->
			<type-name>BorderedRoundRectBackground</type-name>
		</type-names>
		<constructors>
			<constructor>
				<params order="color,arc,borderColor,borderWidth">
					<param>
						<name>color</name>
						<description>the color of this background in RGB, e.g. 0xFFDD12</description>
						<mandatory>no</mandatory>
						<type>rgbColor</type>
						<default>0xFFFFFF</default>
					</param>
					<param>
						<name>arc</name>
						<description>the diameter of the arc at the four corners</description>
						<mandatory>no</mandatory>
						<type>positiveInt</type>
						<default>5</default>
					</param>
					<param>
						<name>borderColor</name>
						<description>the color of the border of this background in RGB, e.g. 0xFFDD12</description>
						<mandatory>no</mandatory>
						<type>rgbColor</type>
						<default>0</default>
					</param>
					<param>
						<name>borderWidth</name>
						<alternatives>width</alternatives>
						<description>the width of the border of this background</description>
						<mandatory>no</mandatory>
						<type>positiveInt</type>
						<default>1</default>
					</param>
				</params>
			</constructor>
			<constructor>
				<params order="color,arcWidth,arcHeight,borderColor,borderWidth">
					<param>
						<name>color</name>
						<description>the color of this background in RGB, e.g. 0xFFDD12</description>
						<mandatory>no</mandatory>
						<type>rgbColor</type>
						<default>0xFFFFFF</default>
					</param>
					<param>
						<name>arcWidth</name>
						<description>the horizontal diameter of the arc at the four corners</description>
						<mandatory>no</mandatory>
						<type>positiveInt</type>
						<default>5</default>
					</param>
					<param>
						<name>arcHeight</name>
						<description>the vertical diameter of the arc at the four corners</description>
						<mandatory>no</mandatory>
						<type>positiveInt</type>
						<default>5</default>
					</param>
					<param>
						<name>borderColor</name>
						<description>the color of the border of this background in RGB, e.g. 0xFFDD12</description>
						<mandatory>no</mandatory>
						<type>rgbColor</type>
						<default>0</default>
					</param>
					<param>
						<name>borderWidth</name>
						<alternatives>width</alternatives>
						<description>the width of the border of this background</description>
						<mandatory>no</mandatory>
						<type>positiveInt</type>
						<default>1</default>
					</param>
				</params>
			</constructor>
		</constructors>
	</background>


</backgrounds>